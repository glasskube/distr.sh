---
import StarlightLayout from '../layouts/StarlightLayout.astro';
import DemoButton from '../components/DemoButton.astro';
import ContactForm from '../components/ContactForm';

const TITLE = 'Get in touch';
const DESCRIPTION =
  "Want to get in touch? We'd love to hear from you. Here's how you can reach us.";
---

<StarlightLayout title={TITLE} description={DESCRIPTION}>
  <div class="not-content">
    <!-- Header -->
    <section class="text-center mt-8 mb-12">
      <h1 class="text-4xl font-bold mb-4">{TITLE}</h1>
      <p class="text-xl font-semibold text-gray-600 dark:text-gray-300">
        {DESCRIPTION}
      </p>
    </section>

    <!-- Contact Options -->
    <section class="container mx-auto px-4 mb-16">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Talk to Founders -->
        <div class="flex flex-col">
          <div
            class="contact-card rounded-t-2xl p-8 flex-grow"
            style="background: linear-gradient(to right, var(--sl-color-accent), var(--sl-color-accent-high)) border-box; border-bottom: none;">
            <div class="text-center">
              <svg
                class="w-16 h-16 mx-auto mb-6 text-accent-600 dark:text-accent-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <h3 class="text-2xl font-bold mb-4">Talk to Founders</h3>
              <p class="text-gray-600 dark:text-gray-300">
                Interested in Glasskube? Talk to the founders directly.
              </p>
            </div>
          </div>
          <div class="bg-gray-50 dark:bg-gray-800 rounded-b-2xl p-6">
            <div class="grid md:grid-cols-2 gap-6 text-center">
              <div>
                <p class="font-bold mb-1">Glasskube, Inc.</p>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">
                  Chicago / United States
                </p>
                <a
                  href="tel:+18723092840"
                  class="text-accent-600 hover:text-accent-700 dark:text-accent-400 dark:hover:text-accent-300">
                  +1 (872) 309-2840
                </a>
              </div>
              <div>
                <p class="font-bold mb-1">Glasskube Labs GmbH</p>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">
                  Vienna / Austria
                </p>
                <a
                  href="tel:+4367761038250"
                  class="text-accent-600 hover:text-accent-700 dark:text-accent-400 dark:hover:text-accent-300">
                  +43 677 610 382 50
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Book a Demo -->
        <div class="flex flex-col">
          <div
            class="contact-card rounded-t-2xl p-8 flex-grow"
            style="background: linear-gradient(to right, var(--sl-color-accent), var(--sl-color-accent-high)) border-box; border-bottom: none;">
            <div class="text-center">
              <svg
                class="w-16 h-16 mx-auto mb-6 text-accent-600 dark:text-accent-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <h3 class="text-2xl font-bold mb-4">Book a demo</h3>
              <p class="text-gray-600 dark:text-gray-300">
                Directly schedule a demo of Distr.
              </p>
            </div>
          </div>
          <div
            class="bg-gray-50 dark:bg-gray-800 rounded-b-2xl p-6 text-center">
            <DemoButton class="text-lg py-4 px-8" />
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="container mx-auto px-4 mb-16">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold mb-4">Contact form</h2>
          <p class="text-gray-600 dark:text-gray-300">
            We will follow up as soon as possible.
          </p>
        </div>
        <ContactForm client:load />
      </div>
    </section>
  </div>
</StarlightLayout>

<style>
  .contact-card {
    position: relative;
    border: 3px solid transparent;
    background:
      linear-gradient(
          to bottom right,
          var(--sl-color-accent-low),
          var(--sl-color-accent)
        )
        border-box,
      var(--sl-color-bg) padding-box;
    -webkit-mask:
      linear-gradient(#fff 0 0) padding-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .not-content {
    max-width: none;
  }
</style>
