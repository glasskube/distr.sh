    <title>Distr - Software Distribution Platform</title>
    <script>
      (() => {
        const getColorSchemeQuery = () =>
          window.matchMedia('(prefers-color-scheme: dark)');
        const getPreferredTheme = () =>
          localStorage['starlight-theme'] ||
          (getColorSchemeQuery().matches ? 'dark' : 'light');
        const setPreferredTheme = () =>
          document.body.setAttribute('data-theme', getPreferredTheme());
        getColorSchemeQuery().addEventListener('change', () =>
          setPreferredTheme(),
        );
        addEventListener('storage', () => setPreferredTheme());
        setPreferredTheme();
      })();
    </script>
