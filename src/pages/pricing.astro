---
import StarlightLayout from '../layouts/StarlightLayout.astro';
import PricingCalculator from '../components/pricing/PricingCalculator';
import PricingComparisonTable from '../components/pricing/PricingComparisonTable.astro';
import PricingFAQ from '../components/pricing/PricingFAQ.astro';
import NewsletterSection from '../components/home/NewsletterSection.astro';

const title = 'Pricing';
const description = 'Software Distribution Platform';
---

<StarlightLayout title={title} description={description}>
  <section class="py-8 md:py-12 bg-gray-50 dark:bg-gray-800 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
      <p
        class="text-lg md:text-xl font-semibold text-gray-600 dark:text-gray-300">
        {description}
      </p>
    </div>
  </section>

  <section class="py-8 md:py-16 bg-gray-50 dark:bg-gray-800">
    <PricingCalculator client:load />
  </section>

  <div class="bg-gray-50 dark:bg-gray-800">
    <PricingComparisonTable />
  </div>

  <div class="bg-gray-50 dark:bg-gray-800">
    <PricingFAQ />
  </div>

  <NewsletterSection />
</StarlightLayout>
