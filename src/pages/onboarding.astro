---
import StandaloneLayout from '../layouts/StandaloneLayout.astro';
import MultiStepForm from '../components/signup/MultiStepForm.astro';

const pageTitle = 'Onboarding - Book a Meeting | Distr';
const pageDescription =
  'Complete our onboarding questionnaire to help us understand your needs and schedule a personalized demo of the Distr platform.';
---

<StandaloneLayout title={pageTitle} description={pageDescription}>
  <MultiStepForm
    flowType="onboarding"
    heading="The easiest way to distribute software"
    subheading="You will get a free 30 day trial access to our platform."
    ctaNote="(No credit card required.)"
    requirePassword={false}
    successTitle="Finalize onboarding"
    successMessage="Thank you for your interest! We will pesonally guide you through the platform and provide you access to Distr in a short onboarding call."
    submitButtonText="Schedule onboarding"
  />
</StandaloneLayout>
