---
import {getCollection, render} from 'astro:content';
import Layout from '~/layouts/StarlightLayout.astro';
import CTASection from '~/components/home/CTASection.astro';
import type {GlossaryEntryConfig} from '~/content.config';

export async function getStaticPaths() {
  const glossaryEntries = await getCollection('glossary');
  return glossaryEntries.map(entry => ({
    params: {slug: entry.data.slug},
    props: {entry},
  }));
}

const {entry} = Astro.props;
const {Content} = await render(entry);
const {title, description} = entry.data as GlossaryEntryConfig;
---

<Layout title={title} description={description}>
  <div
    class="relative overflow-hidden bg-gray-50 dark:bg-slate-900 py-12 sm:py-20">
    <div class="absolute inset-0 bg-gray-50/80 dark:bg-slate-900/80"></div>
    <div class="relative mx-auto max-w-4xl px-6 sm:px-8 lg:px-10">
      <article
        class="bg-white dark:bg-slate-800 rounded-lg border border-gray-200 dark:border-slate-700 p-8 sm:p-12">
        <header class="mb-8">
          <a
            href="/glossary/"
            class="inline-flex items-center text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 mb-4">
            ← Back to Glossary
          </a>
          <h1
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            {title}
          </h1>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            {description}
          </p>
        </header>

        <div
          id="glossary-content"
          class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-bold prose-h2:text-2xl prose-h3:text-xl prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline prose-code:text-sm prose-pre:bg-gray-100 dark:prose-pre:bg-slate-900 prose-pre:border prose-pre:border-gray-200 dark:prose-pre:border-slate-700">
          <Content />
        </div>

        <footer
          class="mt-12 pt-8 border-t border-gray-200 dark:border-slate-700">
          <a
            href="/glossary/"
            class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">
            ← Back to Glossary
          </a>
        </footer>
      </article>
    </div>
  </div>
  <CTASection
    title="Want to learn more?"
    description=""
    primaryButton={{
      text: 'Download Whitepaper',
      href: '/white-paper/building-blocks/',
    }}
    secondaryButton={{
      text: 'Book Demo',
      href: 'https://cal.glasskube.com/team/gk/demo',
    }}
  />
</Layout>

<script is:inline>
  // Insert CTA into glossary content (middle, above h2 or h3)
  function insertGlossaryCTA() {
    const content = document.getElementById('glossary-content');
    if (!content) return;

    // Get all h2 and h3 headings
    const headings = Array.from(content.querySelectorAll('h2, h3'));
    if (headings.length === 0) return;

    // Find middle position
    const middleIndex = Math.floor(headings.length / 2);
    const middleHeading = headings[middleIndex];
    
    if (middleHeading && middleHeading.parentNode) {
      const ctaHTML = `
        <div class="glossary-cta-insert my-12 py-8">
          <div class="bg-gradient-to-br from-[#174c76] to-[#0c263b] rounded-2xl p-8 md:p-12 lg:p-16 shadow-[0_20px_60px_rgba(0,0,0,0.15)] text-center" style="color: white;">
            <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-6" style="color: white;">
              Want to learn more?
            </h2>
            <div class="flex flex-col md:flex-row gap-4 justify-center items-center">
              <a href="/white-paper/building-blocks/" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-accent-600 hover:bg-accent-700 rounded-lg transition-colors w-full md:w-auto">
                Download Whitepaper
              </a>
              <a href="https://cal.glasskube.com/team/gk/demo" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white border-2 border-white rounded-lg hover:bg-white/10 transition-colors w-full md:w-auto">
                Book Demo
              </a>
            </div>
          </div>
        </div>
      `;
      
      const ctaDiv = document.createElement('div');
      ctaDiv.innerHTML = ctaHTML;
      middleHeading.parentNode.insertBefore(ctaDiv.firstElementChild, middleHeading);
    }
  }

  // Run after DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', insertGlossaryCTA);
  } else {
    insertGlossaryCTA();
  }
</script>
