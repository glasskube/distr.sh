---
import StandaloneLayout from '../layouts/StandaloneLayout.astro';
import MultiStepForm from '../components/signup/MultiStepForm.astro';
import {
  signupSteps,
  installationOptions,
  deploymentTypes,
  roleOptions,
  expertiseOptions,
  companySizeOptions,
  discoveryOptions,
  timelineOptions,
  featureHighlights,
} from '~/data/signupFormData.ts';
import CalBooking from '~/components/booking/CalBooking.tsx';

const pageTitle = 'Get Started with Distr - Sign Up for Free';
const pageDescription =
  'Sign up for Distr and start distributing your software to self-managed customers. No credit card required. Get instant access to the platform.';
---

<StandaloneLayout title={pageTitle} description={pageDescription}>
  <MultiStepForm
    flowType="get-started"
    heading="The easiest way to distribute software"
    subheading="You will gain automatic access to our platform upon completing the form."
    ctaNote="(No credit card required.)"
    requirePassword={true}
    signupSteps={signupSteps}
    installationOptions={installationOptions}
    deploymentTypes={deploymentTypes}
    roleOptions={roleOptions}
    expertiseOptions={expertiseOptions}
    companySizeOptions={companySizeOptions}
    discoveryOptions={discoveryOptions}
    timelineOptions={timelineOptions}
    featureHighlights={featureHighlights}
    successTitle="Thank you!"
    successMessage="Please check your mailbox to confirm your email and log into Distr."
    submitButtonText="Complete Sign Up"
  />
  <CalBooking></CalBooking>
</StandaloneLayout>
