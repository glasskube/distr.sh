---
import DemoButton from '~/components/DemoButton.astro';
import SignupButton from '~/components/SignupButton.astro';

interface Props {
  title?: string;
  description?: string;
  primaryButton?: {
    text: string;
    href: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
  };
}

const {
  title = 'Sign up and explore Distr',
  description = 'Distr is a battle tested software distribution platform that helps you scale from your first self-managed customers to dozens and even thousands.',
  primaryButton,
  secondaryButton,
} = Astro.props;
---

<section class="pt-4 pb-8 md:pt-8 md:pb-16 lg:pt-12 lg:pb-24 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 max-w-5xl">
    <div
      class="bg-gradient-to-br from-[#174c76] to-[#0c263b] rounded-2xl p-8 md:p-12 lg:p-16 shadow-[0_20px_60px_rgba(0,0,0,0.15)] text-center"
      style="color: white;">
      <h2
        class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-6"
        style="color: white;">
        {title}
      </h2>
      {description && (
        <p
          class="text-base md:text-lg lg:text-xl mb-6 md:mb-8 opacity-90 leading-relaxed max-w-3xl mx-auto"
          style="color: white;">
          {description}
        </p>
      )}
      <div class="flex flex-col md:flex-row gap-4 justify-center items-center">
        {primaryButton ? (
          <a
            href={primaryButton.href}
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-accent-600 hover:bg-accent-700 rounded-lg transition-colors w-full md:w-auto"
            target={primaryButton.href.startsWith('http') ? '_blank' : undefined}
            rel={primaryButton.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
            {primaryButton.text}
          </a>
        ) : (
          <DemoButton class="w-full md:w-auto" />
        )}
        {secondaryButton ? (
          <a
            href={secondaryButton.href}
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white border-2 border-white rounded-lg hover:bg-white/10 transition-colors w-full md:w-auto"
            target={secondaryButton.href.startsWith('http') ? '_blank' : undefined}
            rel={secondaryButton.href.startsWith('http') ? 'noopener noreferrer' : undefined}>
            {secondaryButton.text}
          </a>
        ) : (
          <SignupButton class="w-full md:w-auto text-white border-white" />
        )}
      </div>
    </div>
  </div>
</section>
