---
import {Icon} from 'astro-icon/components';

const features = [
  {
    title: 'Container Registry',
    icon: 'lucide:container',
    description:
      'OCI compliant container registry with granular access control, security scanning and detailed analytics.',
  },
  {
    title: 'License Management',
    icon: 'lucide:key',
    description:
      'Restrict access based on custom software licenses with expiration dates, custom entitlements and usage.',
  },
  {
    title: 'Deployment Agents',
    icon: 'lucide:lightbulb',
    description:
      'Optional Docker Compose and Helm agents manage deployments, collect logs and metrics and allow remote troubleshooting.',
  },
];
---

<section class="py-8 md:py-16 lg:py-24 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-8 md:mb-16 max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold leading-tight">
        Distr is the central place to manage all your self-managed, vpc and
        air-gapped customers.
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 mt-8 md:mt-16">
      {
        features.map(feature => (
          <div class="text-center px-4 md:px-6">
            <div class="relative inline-flex items-center justify-center w-20 h-20 md:w-24 md:h-24 mb-6 rounded-full bg-gradient-to-br from-[#00b5eb] to-[#63c5e3] p-1">
              <div class="w-full h-full rounded-full bg-white dark:bg-gray-900 flex items-center justify-center">
                <Icon name={feature.icon} class="text-4xl" />
              </div>
            </div>
            <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">
              {feature.title}
            </h3>
            <p class="text-base md:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
              {feature.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
