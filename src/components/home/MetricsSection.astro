---
import {Icon} from 'astro-icon/components';

const metrics = [
  {
    value: '200+',
    label: 'Organizations',
    icon: 'lucide:building-2',
  },
  {
    value: '5000+',
    label: 'Agent Downloads',
    icon: 'lucide:download',
  },
  {
    value: '700+',
    label: 'GitHub Stars',
    icon: 'lucide:star',
  },
  {
    value: '250+',
    label: 'Discord members',
    icon: 'lucide:users',
  },
];
---

<section class="py-8 md:py-12 lg:py-16 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
      {
        metrics.map(metric => (
          <div class="text-center px-4 py-6 md:py-8 rounded-xl bg-white dark:bg-gray-900 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-200 dark:border-gray-700">
            <div class="flex justify-center mb-3 md:mb-4">
              <div class="w-12 h-12 md:w-14 md:h-14 rounded-full bg-gradient-to-br from-[#00b5eb] to-[#63c5e3] flex items-center justify-center">
                <Icon
                  name={metric.icon}
                  class="text-2xl md:text-3xl text-white"
                />
              </div>
            </div>
            <div class="text-3xl md:text-4xl lg:text-5xl font-bold mb-2 text-gray-900 dark:text-white">
              {metric.value}
            </div>
            <div class="text-sm md:text-base text-gray-600 dark:text-gray-300 font-medium">
              {metric.label}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
