---
// ThemeImage.astro
export interface Props {
  lightSrc: string;
  darkSrc: string;
  alt: string;
}
const { lightSrc, darkSrc, alt } = Astro.props;
---

<img 
  src={lightSrc}
  data-dark-src={darkSrc}
  data-light-src={lightSrc}
  alt={alt}
  class="theme-image"
/>

<script>
  // Get all theme images
  const themeImages = document.querySelectorAll('.theme-image');

  // Function to update an image based on theme
  function updateImage(img) {
    const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
    img.src = isDark ? img.dataset.darkSrc : img.dataset.lightSrc;
  }

  // Update all images initially
  themeImages.forEach(updateImage);

  // Watch for theme changes
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.attributeName === 'data-theme') {
        themeImages.forEach(updateImage);
      }
    });
  });

  observer.observe(document.documentElement, { attributes: true });
</script>