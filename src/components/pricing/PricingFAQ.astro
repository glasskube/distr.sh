---
import {PricingFAQs} from '~/data/pricingFaq';
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Everything you need to know about Distr pricing and features
      </p>
    </div>
    <div class="max-w-4xl mx-auto space-y-4">
      {
        PricingFAQs.map(faq => (
          <details
            class="bg-white dark:bg-gray-900 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm hover:shadow-md transition-shadow scroll-mt-24 group"
            id={faq.id}>
            <summary class="p-6 md:p-8 cursor-pointer list-none">
              <h3 class="text-xl md:text-2xl font-semibold m-0 inline-flex items-center gap-2 text-gray-900 dark:text-white group-hover:text-[#00b5eb] dark:group-hover:text-[#00b5eb] transition-colors">
                <span class="text-[#00b5eb] opacity-0 group-hover:opacity-100 transition-opacity">
                  #
                </span>
                <span>{faq.question}</span>
              </h3>
            </summary>
            <div class="px-6 md:px-8 pb-6 md:pb-8 pt-0">
              <div
                class="prose prose-lg dark:prose-invert max-w-none prose-p:text-gray-600 dark:prose-p:text-gray-300 prose-p:leading-relaxed"
                set:html={faq.answer}
              />
            </div>
          </details>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Enhanced prose styles */
  :global(.prose strong) {
    font-weight: 600;
    color: rgb(17 24 39);
  }

  :global(.dark .prose strong) {
    color: rgb(243 244 246);
  }

  :global(.prose p) {
    margin-top: 1em;
    margin-bottom: 1em;
  }

  :global(.prose p:first-child) {
    margin-top: 0;
  }

  :global(.prose p:last-child) {
    margin-bottom: 0;
  }

  :global(.prose br) {
    display: block;
    content: '';
    margin-top: 0.5em;
  }

  :global(.prose a) {
    color: #00b5eb;
    text-decoration: underline;
  }

  :global(.prose a:hover) {
    color: #0099cc;
  }

  /* Details/Summary accordion styles */
  details summary::-webkit-details-marker {
    display: none;
  }

  details summary::marker {
    display: none;
  }
</style>
