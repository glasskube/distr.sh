---
export interface Props {
  company: string;
  industry: string;
  useCase: string;
  challenge: string;
  solution: string;
  result: string;
  ctoQuote: string;
  logo: string;
  ctoImage: string;
  ctoName: string;
  ctoTitle: string;
  slug: string;
}

const {
  company,
  industry,
  useCase,
  challenge,
  solution,
  result,
  ctoQuote,
  logo,
  ctoImage,
  ctoName,
  ctoTitle,
  slug,
} = Astro.props;
---

<div
  class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl p-6 md:p-8 shadow-lg max-w-6xl mx-auto"
  data-slug={slug}>
  <!-- Header with Logo and Info -->
  <div
    class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-12 mb-8">
    <img
      src={logo}
      alt={`${company} Logo`}
      class="h-24 w-auto rounded-xl object-contain"
    />
    <div class="flex flex-row gap-8">
      <div class="text-center md:text-left">
        <div
          class="text-sm font-semibold text-[#00b5eb] uppercase tracking-wide mb-1">
          Industry:
        </div>
        <div class="text-base font-medium text-gray-900 dark:text-white">
          {industry}
        </div>
      </div>
      <div class="text-center md:text-left">
        <div
          class="text-sm font-semibold text-[#00b5eb] uppercase tracking-wide mb-1">
          Use Case:
        </div>
        <div class="text-base font-medium text-gray-900 dark:text-white">
          {useCase}
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content (2/3) -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Challenge -->
      <div>
        <h3
          class="text-lg font-semibold text-[#00b5eb] uppercase tracking-wide mb-3">
          Challenge
        </h3>
        <div
          class="text-base leading-relaxed text-gray-700 dark:text-gray-300 whitespace-pre-line"
          set:html={challenge}
        />
      </div>

      <!-- Solution -->
      <div>
        <h3
          class="text-lg font-semibold text-[#00b5eb] uppercase tracking-wide mb-3">
          Solution
        </h3>
        <div
          class="text-base leading-relaxed text-gray-700 dark:text-gray-300 whitespace-pre-line"
          set:html={solution}
        />
      </div>

      <!-- Result -->
      <div>
        <h3
          class="text-lg font-semibold text-[#00b5eb] uppercase tracking-wide mb-3">
          Result
        </h3>
        <div
          class="text-base leading-relaxed text-gray-700 dark:text-gray-300 whitespace-pre-line"
          set:html={result}
        />
      </div>
    </div>

    <!-- Sidebar (1/3) -->
    <div class="lg:col-span-1">
      <div
        class="border border-gray-300 dark:border-gray-600 rounded-xl p-6 sticky top-24">
        <!-- Quote -->
        <blockquote
          class="text-lg leading-relaxed italic font-medium text-gray-900 dark:text-white mb-6">
          "{ctoQuote}"
        </blockquote>

        <!-- CTO Info -->
        <div class="flex items-center gap-4">
          <img
            src={ctoImage}
            alt={ctoName}
            class="w-16 h-16 rounded-full object-cover border-2 border-[#00b5eb]"
          />
          <div>
            <div class="font-semibold text-gray-900 dark:text-white text-lg">
              {ctoName}
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              {ctoTitle}
            </div>
            <div class="text-sm text-[#00b5eb] font-medium">
              {company}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
